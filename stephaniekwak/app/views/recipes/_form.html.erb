<%= form_tag recipes_path do |f| %>
  <%= label_tag "title" %>
  <%= text_field_tag "recipe_form[title]" %><br>

  <%= label_tag "description" %>
  <%= text_area_tag "recipe_form[description]" %><br>

  <%= label_tag "servings" %>
  <%= text_field_tag "recipe_form[yield]" %><br>

  Ingredients:<br>
  <ul>
  <% @ingredients.each do |ingredient| %>
    <li><%= check _box_tag "recipe_form[ingredients][]", ingredient.id, @recipe.ingredients.include?(ingredient) %>
    <%= label_tag "recipe_form[ingredients][]", ingredient.name %><br>
    <!-- <%= label_tag "Measurement (ex: 1 cup, chopped)" %><br>
    <%= text_field_tag "recipe_form[ingredients][][recipe_ingredients][measurement]" %></li> -->
    <hr>
  <% end %>
  </ul>
  <%= label_tag "time to cook" %>
  <%= text_field_tag "recipe_form[time]" %><br>

  <%= label_tag "directions" %>
  <%= text_area_tag "recipe_form[directions]" %><br>

  <%= submit_tag %>
<% end %>
