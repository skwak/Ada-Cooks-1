  <%= label_tag "Title:" %><br>
  <%= text_field_tag "recipe_form[title]" %><br>

  <%= label_tag "Description:" %><br>
  <%= text_area_tag "recipe_form[description]" %><br>

  <%= label_tag "Yields (ex. 1 pizza for 2 people)" %><br>
  <%= text_field_tag "recipe_form[yield]" %><br>

  <%= label_tag "Time to Cook:" %><br>
  <%= text_field_tag "recipe_form[time]" %><br>

  <%= label_tag "Ingredients:" %><br>
  <ul>
  <% @ingredients.each do |ingredient| %>
    <li><%= check_box_tag "recipe_form[ingredients][][ingredient_id]", ingredient.id, @recipe.ingredients.include?(ingredient) %>
    <%= label_tag "recipe_form[ingredients][][ingredient_id]", ingredient.name %><br>
    <%= label_tag "Measurement (ex: 1 cup, chopped)" %><br>
    <%= text_field_tag "recipe_form[ingredients][][measurement]" %></li>
    <hr>
  <% end %>
  </ul>

  <%= label_tag "Directions:" %><br>
  <%= text_area_tag "recipe_form[directions]" %><br>

  <%= submit_tag "Save", class: "btn btn-primary btn-lg" %>
<% end %>
