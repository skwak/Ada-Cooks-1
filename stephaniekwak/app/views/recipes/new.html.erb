<h2>Add New Recipe</h2>

<%= form_tag recipes_path do |f| %>
  <%= label_tag "title" %>
  <%= text_field_tag "recipe_form[title]" %><br>

  <%= label_tag "description" %>
  <%= text_area_tag "recipe_form[description]" %><br>

  <%= label_tag "servings" %>
  <%= text_field_tag "recipe_form[yield]" %><br>

  Ingredients:<br>
  <ul>
  <% @ingredients.each do |ingredient| %>
    <li><%= check_box_tag "recipe_form[ingredients][]", ingredient.id %>
    <%= label_tag "recipe_form[ingredients][]", ingredient.name %></li>
    <%= text_field_tag "recipe_form[recipe_ingredients][measurement]" %>
    <hr>
  <% end %>
  </ul>
  <%= label_tag "time to cook" %>
  <%= text_field_tag "recipe_form[time]" %><br>

  <%= label_tag "directions" %>
  <%= text_area_tag "recipe_form[directions]" %><br>

  <%= submit_tag %>
<% end %>
